<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DalentaSales" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MaterialPrimaryButton"  parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/purple_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:height">@dimen/_42sdp</item>
    </style>

    <style name="MaterialInputEditTextPrimary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/edittext_border_primary</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="MaterialInputEditTextFullWidth" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/edittext_full_box</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>
</resources>